<div class="container mt-5">
  <div class="text-center mb-5">
    <h1>Bienvenido a TechStore</h1>
    <p class="lead">Servicios, tecnología, y soluciones personalizadas.</p>
    <%= link_to 'Explorar servicios', services_path, class: 'btn btn-primary' %>
  </div>

  <h2 class="mb-3">Servicios destacados</h2>
  <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
    <% @services.each do |service| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= service.title %></h5>
            <p class="card-text"><%= truncate(service.description, length: 100) %></p>
            <%= link_to 'Ver más', service_path(service), class: 'btn btn-outline-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <h2 class="mb-3">Últimos tutoriales</h2>
  <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
    <% @tutorials.each do |tutorial| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= tutorial.title %></h5>
            <p class="card-text"><%= truncate(tutorial.description, length: 100) %></p>
            <%= link_to 'Ver más', tutorial_path(tutorial), class: 'btn btn-outline-success' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <h2 class="mb-3">Prompts recomendados</h2>
  <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
    <% @prompts.each do |prompt| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= prompt.title %></h5>
            <p class="card-text"><%= truncate(prompt.content, length: 100) %></p>
            <%= link_to 'Ver más', prompt_path(prompt), class: 'btn btn-outline-warning' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <h2 class="mb-3">Últimos artículos del blog</h2>
  <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
    <% @posts.each do |post| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text"><%= truncate(post.body, length: 100) %></p>
            <%= link_to 'Leer más', post_path(post), class: 'btn btn-outline-dark' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
